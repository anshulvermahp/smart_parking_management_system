<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Add Parking Area | ParkSpot</title>

  <link href="https://fonts.googleapis.com/css2?family=Google+Sans:wght@400;600;700&display=swap" rel="stylesheet">

  <style>
    * {
      box-sizing: border-box;
      font-family: 'Google Sans', Arial, sans-serif;
    }

    body {
      margin: 0;
      background: #fff;        /* ‚úÖ pure white */
      min-height: 100vh;
    }

    /* ===== NAVBAR ===== */
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 16px 32px;
      background: #fff;
      border-bottom: 1px solid #e5e5e5;
    }

    .logo {
      font-size: 22px;
      font-weight: 700;
      color: #000;
    }

    .nav-right a {
      margin-left: 20px;
      text-decoration: none;
      color: #000;
      font-weight: 500;
    }

    .login-btn {
      background: #000;
      color: #fff;
      padding: 8px 16px;
      border-radius: 6px;
      font-weight: 600;
    }

    /* ===== PAGE ===== */
    .page {
      padding: 24px 32px;     /* ‚úÖ reduced padding */
    }

    /* ===== FORM CONTAINER ===== */
    .card {
      max-width: 1200px;      /* ‚úÖ wide form */
      margin: 0 auto;
      background: #fff;
      padding: 24px 28px;     /* ‚úÖ tight padding */
      border-radius: 18px;
    }

    .card h2 {
      margin: 0 0 20px;
      font-size: 24px;
      font-weight: 700;
    }

    /* ===== SECTIONS ===== */
    .section {
      margin-bottom: 22px;
    }

    .section-title {
      font-size: 14px;
      font-weight: 700;
      margin-bottom: 12px;
      padding-bottom: 6px;
      border-bottom: 1px solid #eee;
    }

    /* ===== GRID ===== */
    .grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr); /* ‚úÖ 3 columns */
      gap: 14px 18px;
    }

    .form-group {
      display: flex;
      flex-direction: column;
    }

    .form-group.full {
      grid-column: span 3;
    }

    .form-group.two {
      grid-column: span 2;
    }

    .form-group label {
      font-size: 13px;
      font-weight: 600;
      margin-bottom: 6px;
    }

    .form-group input {
      padding: 10px 12px;
      border-radius: 8px;
      border: 1px solid #ccc;
      font-size: 14px;
    }

    .form-group small {
      font-size: 11px;
      color: #666;
      margin-top: 4px;
    }

    .checkbox-group {
      display: flex;
      gap: 20px;
      font-size: 14px;
    }

    /* ===== SUBMIT ===== */
    .submit-btn {
      width: 100%;
      padding: 14px;
      background: #000;
      color: #fff;
      border: none;
      border-radius: 10px;
      font-size: 15px;
      font-weight: 700;
      cursor: pointer;
    }

    .submit-btn:hover {
      background: #111;
    }

    /* ===== SMALL SCREENS ===== */
    @media (max-width: 1024px) {
      .grid {
        grid-template-columns: repeat(2, 1fr);
      }

      .form-group.full,
      .form-group.two {
        grid-column: span 2;
      }
    }

    @media (max-width: 640px) {
      .grid {
        grid-template-columns: 1fr;
      }

      .form-group.full,
      .form-group.two {
        grid-column: span 1;
      }
    }
  </style>
</head>

<body>

  <!-- NAVBAR -->
  <div class="navbar">
    <div class="logo">üìç ParkSpot</div>
    <div class="nav-right">
      <a href="#">Register</a>
      <a href="#">Login</a>
      <a href="#">About us</a>
      <a class="login-btn" href="#">Log in</a>
    </div>
  </div>

  <!-- PAGE -->
  <div class="page">
    <div class="card">

      <h2>Add Parking Area</h2>

      <form action="/admin/add-parking" method="POST" enctype="multipart/form-data">

        <!-- BASIC -->
        <div class="section">
          <div class="section-title">Basic Information</div>
          <div class="grid">
            <div class="form-group full">
              <label>Parking Name</label>
              <input type="text" name="name" required>
            </div>
          </div>
        </div>

        <!-- ADDRESS -->
        <div class="section">
          <div class="section-title">Address</div>
          <div class="grid">
            <div class="form-group">
              <label>City</label>
              <input type="text" name="city" required>
            </div>
            <div class="form-group">
              <label>State</label>
              <input type="text" name="state" required>
            </div>
            <div class="form-group">
              <label>ZIP Code</label>
              <input type="text" name="zip" required>
            </div>
            <div class="form-group">
              <label>Country</label>
              <input type="text" name="country" required>
            </div>
            <div class="form-group full">
              <label>Street Address</label>
              <input type="text" name="street" required>
            </div>
          </div>
        </div>

        <!-- LOCATION -->
        <div class="section">
          <div class="section-title">Location</div>
          <div class="grid">
            <div class="form-group full">
              <label>Google Maps Link</label>
              <input type="text" name="mapLink" required>
              <small>Latitude & longitude will be extracted automatically</small>
            </div>
          </div>
        </div>

        <!-- CAPACITY -->
        <div class="section">
          <div class="section-title">Capacity</div>
          <div class="grid">
            <div class="form-group">
              <label>Total Slots</label>
              <input type="number" name="totalSlots" required>
            </div>
            <div class="form-group">
              <label>Available Slots</label>
              <input type="number" name="availableSlots" required>
            </div>
          </div>
        </div>

        <!-- PRICING -->
        <div class="section">
          <div class="section-title">Pricing</div>
          <div class="grid">
            <div class="form-group">
              <label>Hourly</label>
              <input type="number" name="pricingHourly" step="0.01" required>
            </div>
            <div class="form-group">
              <label>Daily</label>
              <input type="number" name="pricingDaily" step="0.01">
            </div>
            <div class="form-group">
              <label>Monthly</label>
              <input type="number" name="pricingMonthly" step="0.01">
            </div>
          </div>
        </div>

        <!-- OPERATIONS -->
        <div class="section">
          <div class="section-title">Operations</div>
          <div class="grid">
            <div class="form-group">
              <label>Open Time</label>
              <input type="time" name="operationalOpen" required>
            </div>
            <div class="form-group">
              <label>Close Time</label>
              <input type="time" name="operationalClose" required>
            </div>
          </div>
        </div>

        <!-- SECURITY -->
        <div class="section">
          <div class="section-title">Security & Media</div>
          <div class="grid">
            <div class="form-group full">
              <label>Security</label>
              <div class="checkbox-group">
                <label><input type="checkbox" name="securityCctv"> CCTV</label>
                <label><input type="checkbox" name="securityGuard"> Guard</label>
                <label><input type="checkbox" name="securityGated"> Gated</label>
              </div>
            </div>
            <div class="form-group full">
              <label>Parking Images</label>
              <input type="file" name="images" multiple>
            </div>
          </div>
        </div>

        <button class="submit-btn" type="submit">Add Parking</button>

      </form>

    </div>
  </div>

</body>
</html>
